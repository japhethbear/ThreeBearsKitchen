@page ""
@model ThreeBearsKitchen.Pages.Recipes.EditModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Recipe</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" asp-page-handler="OnPostAsync">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Recipe.RecipeId" />
                <div class="form-group">
                    <label asp-for="Recipe.RecipeName" class="control-label"></label>
                    <input asp-for="Recipe.RecipeName" class="form-control" />
                    <span asp-validation-for="Recipe.RecipeName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Recipe.RecipeMeal" class="control-label"></label>
                    <input asp-for="Recipe.RecipeMeal" class="form-control" />
                    <span asp-validation-for="Recipe.RecipeMeal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Recipe.Ingredients" class="control-label">Ingredients</label>
                    @{
                        var ingredientList = Model.Recipe.Ingredients.ToList();
                    }
                    @for (int i = 0; i < ingredientList.Count; i++)
                    {
                        <div>
                            <input type="text" asp-for="@ingredientList[i].IngredientName" class="form-control" />
                            <input type="text" asp-for="@ingredientList[i].IngredientAmount" class="form-control" />
                            <input type="hidden" asp-for="@ingredientList[i].IngredientID" />
                        </div>
                    }
                </div>
                <div class="form-group">
                    <label asp-for="Recipe.Instructions" class="control-label">Instructions</label>
                    @if (Model.Recipe.Instructions != null)
                    {
                        @for (int i = 0; i < Model.Recipe.Instructions.Count; i++)
                        {
                            <div>
                                <input type="text" asp-for="@Model.Recipe.Instructions[i].Description" class="form-control" />
                                <input type="hidden" asp-for="@Model.Recipe.Instructions[i].InstructionID" />
                            </div>
                        }
                    }
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    }
</body>
</html>
